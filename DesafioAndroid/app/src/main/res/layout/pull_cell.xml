<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pull_cell_clickable"
    android:padding="@dimen/default_padding"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pull_title"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryFont"
        android:textStyle="bold"
        android:text="Pull Request title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pull_description"
        android:textColor="@color/colorSecondaryText"
        android:lines="2"
        android:ellipsize="end"
        android:text="Descrição do pull lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/pull_user_avatar"
            android:src="@drawable/ic_no_avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pull_user_name"
                android:textColor="@color/colorPrimaryFont"
                android:text="Alexandre S Silva"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pull_user_type"
                android:textColor="@color/colorSubTitle"
                android:text="User"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>